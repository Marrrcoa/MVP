<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lista de Trabajadores</title>
</head>
<body>
  <h1>Lista de Trabajadores</h1>
  <table border="1">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Usuario</th>
      </tr>
    </thead>
    <tbody>
      <% if (users.length > 0) { %>
        <% users.forEach(user => { %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.name %></td>
            <td><%= user.user %></td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="3">No hay usuarios registrados.</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</body>
</html>
